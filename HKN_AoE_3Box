//
// autoexec
//
<Command AutoExec>
  
  <CreateColoredButton Button1 0 0 80 40 0xff0000 0xFFFFFF "HOTKEYS OFF">
  <TargetButton Button1>
    <Alwaysontop on>
    <HideWin>
<SetButtonHotkey Button1 Hotkey Pause> 
//
// hotkeys toggle
//
<Hotkey Pause>
  <Toggle>
    <TurnHotKeysOFF>
    <Targetbutton Button1>
      <Alwaysontop off>
      <Alwaysontop on>
      <ShowWin>
  <Toggle>
    <TurnHotKeysON>
    <Targetbutton Button1>
      <Alwaysontop off>
      <Alwaysontop on>
      <HideWin>
	 
//----------------------------------------------------------- 
// DEFINE MAIL LABELS FOR SENDING KEY STROKES. 
//----------------------------------------------------------- 
<Label w1 Local SendWinM WoW1> 
<Label w2 Local SendWinM WoW2>
<Label w3 Local SendWinM WoW3> 

<Hotkey ScrollLockOn Ctrl R>
<SendPC local>

<RenameWin "World of Warcraft" WoW1>

<RenameWin "World of Warcraft" WoW2>


<Command ResizeAndPosition>
    <SendPC Local>
    <SendWinM %1%>
	<SetWinRect 0 0 1920 1080>
    <SendWinM %2%>
	<SetWinRect 1920 0 1920 1080>

<Command LaunchAndRename2>
<SendPC %1%>
<Run %2%>
<wait 1000>
<RenameWin "World of Warcraft" %3%>
<RenameWin "World of Warcraft" WoW01> 
<TargetWin %3%>
<RemoveWinFrame>
<wait 500>
<text %8%> 
<wait 200>
<key Tab>
<wait 200>
<text %9%>
<SetAffinity all>

<Hotkey ScrollLockOn Alt Ctrl m>
<if WinDoesNotExist WoW1>
<LaunchAndRename2 local "D:\ChromieCraft_3.3.5a\Wow.exe" WoW1 0 0 1920 1040 account1 password >
<endif>
  <if WinDoesNotExist WoW2>
<LaunchAndRename2 local "D:\ChromieCraft_3.3.5a\Wow.exe" WoW2 1920 0 1920 1080 account2 password >
  <endif>
    <if WinDoesNotExist WoW3>
<LaunchAndRename2 local "D:\ChromieCraft_3.3.5a\Wow.exe" WoW3 1920 0 1920 1080 account3 password >
  <endif>


// This is the hotkey that closes all windows-- Ctrl-Alt-o (letter O)	
<Hotkey ScrollLockOn Alt Ctrl o>
< SendLabel  w1, w2, w3>
  <CloseWin> 
  
  	<Command OrderWin>
  <SendPC local> 
 <TargetWin %1%><SetWinRect 0 0 1920 1080>
  <SetFocusWin>
 <TargetWin %2%><SetWinRect 1920 0 1920 1080>
    <SendFocusWin>
   <wait 5>
        <Key PgUp> // higher framerate and graphics
  
